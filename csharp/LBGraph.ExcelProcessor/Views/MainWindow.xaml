<Window x:Class="LBGraph.ExcelProcessor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel数据处理器" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 文件选择区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Excel文件路径：" Margin="0,0,0,5"/>
            <DockPanel>
                <Button Content="浏览..." DockPanel.Dock="Right" Width="80" Margin="5,0,0,0"
                        Command="{Binding BrowseCommand}"/>
                <TextBox Text="{Binding FilePath}" />
            </DockPanel>
        </StackPanel>

        <!-- 数据预览和配置区域 -->
        <TabControl Grid.Row="1">
            <TabItem Header="数据预览">
                <DataGrid ItemsSource="{Binding PreviewData}" 
                          AutoGenerateColumns="True"
                          IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="列映射">
                <ListView ItemsSource="{Binding ColumnMappings}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="数据类型" DisplayMemberBinding="{Binding Key}"/>
                            <GridViewColumn Header="Excel列" DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>

        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="加载数据" Width="80" Margin="0,0,5,0"
                    Command="{Binding LoadDataCommand}"/>
            <Button Content="处理数据" Width="80" Margin="0,0,5,0"
                    Command="{Binding ProcessDataCommand}"/>
            <Button Content="保存" Width="80"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>